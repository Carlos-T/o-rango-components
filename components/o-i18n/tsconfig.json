{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es7"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec*"
  ]
}
