{
  "name": "o-rango-components",
  "private": true,
  "scripts": {
    "init": "lerna bootstrap",
    "clean": "lerna run -- clean",
    "test:ci": "lerna --concurrency 1 exec npm run test:ci",
    "test": "lerna exec npm run test",
    "coverage": "codecov",
    "build": "lerna --concurrency 1 exec npm run build",
    "format": "lerna run -- format",
    "lint": "lerna run -- lint",
    "publish:master": "lerna publish --conventional-commits --cd-version=prerelease --yes  --npm-tag=unstable --preid=unstable --message 'ci: Publish [ci skip]'",
    "publish:beta": "lerna publish --conventional-commits --cd-version=prerelease --yes  --npm-tag=beta --preid=beta --no-verify --message 'ci: Publish [ci skip] '",
    "publish:release": "lerna publish --conventional-commits --cd-version=patch --yes  --message 'ci: Publish [ci skip]'"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "codecov": "^3.1.0",
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "@stencil/core": "^0.14.2",
    "@stencil/postcss": "^0.1.0",
    "@stencil/sass": "0.1.1",
    "@types/jest": "^23.3.1",
    "autoprefixer": "^9.0.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
  }
}
