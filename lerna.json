{ 
  "version": "independent",
  "packages": [
    "apps/*",
    "components/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ]
    },  
    "bootstrap": {
      "hoist": false,
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
